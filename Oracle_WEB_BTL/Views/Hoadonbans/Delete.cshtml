@model Oracle_WEB_BTL.Models.Nhanvien

@{
    ViewData["Title"] = "Xóa Nhân Viên";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

<div class="card card-danger">
    <div class="card-header">
        <h3 class="card-title">Xóa Nhân Viên</h3>
    </div>
    <div class="card-body">
        <div class="text-center">
            @if (!string.IsNullOrEmpty(Model.Anh))
            {
                <img class="profile-user-img img-fluid img-circle" src="~/images/@Model.Anh" alt="Ảnh Nhân Viên" style="width: 150px; height: 150px; object-fit: cover;" />
            }
            else
            {
                <img class="profile-user-img img-fluid img-circle" src="~/images/@Oracle_WEB_BTL.Helpers.AppDefaults.DefaultImageFile" alt="Ảnh Mặc Định" style="width: 150px; height: 150px; object-fit: cover;" />
            }
        </div>


        <h3 class="profile-username text-center">@Model.Tennv</h3>
        <p class="text-muted text-center">@Model.MacvNavigation?.Tencv"</p>

        <hr>

        <strong><i class="fas fa-id-card mr-1"></i> @Html.DisplayNameFor(m => m.Manv)</strong>
        <p class="text-muted">@Model.Manv.ToString("0")</p>

        <hr>

        <strong><i class="fas fa-user mr-1"></i> @Html.DisplayNameFor(m => m.Tennv)</strong>
        <p class="text-muted">@Html.DisplayFor(m => m.Tennv)</p>

        <hr>

        <strong><i class="fas fa-venus-mars mr-1"></i> @Html.DisplayNameFor(m => m.Gioitinh)</strong>
        <p class="text-muted">@((Model.Gioitinh == true) ? "Nam" : "Nữ")</p>

        <hr>

        <strong><i class="fas fa-calendar-alt mr-1"></i> @Html.DisplayNameFor(m => m.Ngaysinh)</strong>
        <p class="text-muted">@Model.Ngaysinh?.ToString("dd/MM/yyyy")</p>

        <hr>

        <strong><i class="fas fa-phone-alt mr-1"></i> @Html.DisplayNameFor(m => m.Dienthoai)</strong>
        <p class="text-muted">@Html.DisplayFor(m => m.Dienthoai)</p>

        <hr>

        <strong><i class="fas fa-envelope mr-1"></i> @Html.DisplayNameFor(m => m.Email)</strong>
        <p class="text-muted">@Html.DisplayFor(m => m.Email)</p>

        <hr>

        <strong><i class="fas fa-map-marker-alt mr-1"></i> @Html.DisplayNameFor(m => m.Diachi)</strong>
        <p class="text-muted">@Html.DisplayFor(m => m.Diachi)</p>

        <hr>

        <strong><i class="fas fa-key mr-1"></i> @Html.DisplayNameFor(m => m.Matkhau)</strong>
        <p class="text-muted">
            @if (!string.IsNullOrEmpty(Model.Matkhau))
            {
                <span class="text-muted">@Model.Matkhau</span>
            }
            else
            {
                <span class="text-danger">Chưa đặt mật khẩu</span>
            }
        </p>

        <hr>

        <strong><i class="fas fa-user-shield mr-1"></i> @Html.DisplayNameFor(m => m.Quyenadmin)</strong>
        <p class="text-muted">@((Model.Quyenadmin == true) ? "Có" : "Không")</p>
    </div>
</div>

<div class="mt-3">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Manv" />
        <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Xác Nhận Xóa</button>
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay Lại</a>
    </form>
</div>
