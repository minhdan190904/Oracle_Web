@model IEnumerable<Oracle_WEB_BTL.Models.Dmhanghoa>

@if (Model.Count() == 0)

{
    <div class="alert alert-warning text-center">
        Không có sản phẩm nào phù hợp với tìm kiếm.
    </div>
}

else

{
    <div class="title">DANH SÁCH SẢN PHẨM</div>
    <div class="listProduct">
        @foreach (var product in Model)

        {
            <a asp-controller="Dmhanghoas" asp-action="Details" class="item" asp-route-id="@product.Mahang">
                <img src="~/images/ProductImages/@product.Anh" alt="@product.Tenhanghoa" />
                <h2>@product.Tenhanghoa</h2>
                <div class="manufacturer">
                    <span>@product.MansxNavigation?.Tennsx</span>
                </div>
            </a>
        }
    </div>

    <!-- Pagination -->
    <ul class="pagination mt-3" id="pagination-controls" @(ViewBag.TotalPages > 1 ? "" : "style='display:none;'")>
        @for (int i = 1; i <= ViewBag.TotalPages; i++)

        {
            <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                <a href="#" class="pagination-link page-link"
                   data-page="@i">@i</a>
            </li>
        }
    </ul>
}
