@model IEnumerable<Oracle_WEB_BTL.Models.Nhanvien>

@{
    ViewData["Title"] = "Danh Sách Nhân Viên";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

<div class="ms-2 mx-2">
    <a asp-controller="Nhanviens" asp-action="Create" class="btn btn-primary">
        <i class="fa fa-user-plus"></i> Tạo Nhân Viên Mới
    </a>

    @if (!Model.Any())
    {
        <div class="alert alert-warning mt-3">
            Không có nhân viên nào trong danh sách.
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh Sách Nhân Viên</h3>
            </div>
            <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.First().Manv)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Tennv)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Dienthoai)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Gioitinh)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Ngaysinh)</th>
                            <th>Công Việc</th>
                            <th>Sửa</th>
                            <th>Xóa</th>
                            <th>Chi Tiết</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var nhanvien in Model)
                        {
                            <tr>
                                <td>@nhanvien.Manv</td>
                                <td>@nhanvien.Tennv</td>
                                <td>@nhanvien.Dienthoai</td>
                                <td>
                                    @switch (nhanvien.Gioitinh)
                                    {
                                        case true:
                                            <span>Nam</span>
                                            break;
                                        case false:
                                            <span>Nữ</span>
                                            break;
                                        default:
                                            <span>Không xác định</span>
                                            break;
                                    }
                                </td>
                                <td>@nhanvien.Ngaysinh?.ToString("dd/MM/yyyy")</td>
                                <td>@nhanvien.MacvNavigation?.Tencv</td> <!-- Hiển thị tên công việc -->
                                <td>
                                    <a asp-action="Edit" asp-route-id="@nhanvien.Manv" class="btn btn-warning btn-sm">
                                        <i class="fa fa-pencil-alt"></i> Sửa
                                    </a>
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-route-id="@nhanvien.Manv" class="btn btn-danger btn-sm">
                                        <i class="fa fa-trash"></i> Xóa
                                    </a>
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@nhanvien.Manv" class="btn btn-info btn-sm">
                                        <i class="fa fa-eye"></i> Chi Tiết
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
