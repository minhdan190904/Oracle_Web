@model Oracle_WEB_BTL.Models.Dmhanghoa

@{
    ViewData["Title"] = "Thêm Sản Phẩm";

    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/product.css">
}

<div class="container">
    <div class="title">THÊM SẢN PHẨM</div>
    <form class="detail" asp-controller="Dmhanghoas" asp-action="Create" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Anh" value="default_product.png" />
        <div class="image d-flex flex-column justify-content-between">
            <div class="d-flex flex-column align-content-center">
                <img id="productPreview" src="~/images/ProductImages/1.png" alt="" />
                <div class="form-group d-flex justify-content-center">
                    <label for="imageFile">Chọn Ảnh</label>
                    <input type="file" id="imageFile" name="imageFile" class="form-control" accept="image/*" onchange="previewImage(event)" style="display:none;" />
                </div>
            </div>

            <div class="buttons d-flex justify-content-center flex-wrap">
                <a class="product-btn" asp-controller="Dmhanghoas" asp-action="Index">Quay lại</a>
                <button class="product-btn" type="submit">Thêm</button>
            </div>
        </div>

        <div class="content">
            <div class="form-group row mb-3">
                <label asp-for="Tenhanghoa" class="col-sm-4 col-form-label">Tên Sản Phẩm</label>
                <div class="col-sm-8">
                    <input asp-for="Tenhanghoa" class="form-control" />
                    <span asp-validation-for="Tenhanghoa" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="Maloai" class="col-sm-4 col-form-label">Loại</label>
                <div class="col-sm-8">
                    <select asp-for="Maloai" class="form-control select2bs4" asp-items="ViewBag.Loai"></select>
                    <span asp-validation-for="Maloai" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="Mahinhdang" class="col-sm-4 col-form-label">Hình Dáng</label>
                <div class="col-sm-8">
                    <select asp-for="Mahinhdang" class="form-control select2bs4" asp-items="ViewBag.HinhDang"></select>
                    <span asp-validation-for="Mahinhdang" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="Machatlieu" class="col-sm-4 col-form-label">Chất Liệu</label>
                <div class="col-sm-8">
                    <select asp-for="Machatlieu" class="form-control select2bs4" asp-items="ViewBag.ChatLieu"></select>
                    <span asp-validation-for="Machatlieu" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="Manuocsx" class="col-sm-4 col-form-label">Nước Sản Xuất</label>
                <div class="col-sm-8">
                    <select asp-for="Manuocsx" class="form-control select2bs4" asp-items="ViewBag.NuocSanXuat"></select>
                    <span asp-validation-for="Manuocsx" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="Mamau" class="col-sm-4 col-form-label">Màu Sắc</label>
                <div class="col-sm-8">
                    <select asp-for="Mamau" class="form-control select2bs4" asp-items="ViewBag.MauSac"></select>
                    <span asp-validation-for="Mamau" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="Macongdung" class="col-sm-4 col-form-label">Công Dụng</label>
                <div class="col-sm-8">
                    <select asp-for="Macongdung" class="form-control select2bs4" asp-items="ViewBag.CongDung"></select>
                    <span asp-validation-for="Macongdung" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="Mansx" class="col-sm-4 col-form-label">Nhà Sản Xuất</label>
                <div class="col-sm-8">
                    <select asp-for="Mansx" class="form-control select2bs4" asp-items="ViewBag.NhaSanXuat"></select>
                    <span asp-validation-for="Mansx" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="Dongianhap" class="col-sm-4 col-form-label">Đơn Giá Nhập</label>
                <div class="col-sm-8">
                    <input asp-for="Dongianhap" class="form-control" />
                    <span asp-validation-for="Dongianhap" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="Dongiaban" class="col-sm-4 col-form-label">Đơn Giá Bán</label>
                <div class="col-sm-8">
                    <input asp-for="Dongiaban" class="form-control" />
                    <span asp-validation-for="Dongiaban" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="Thoigianbaohanh" class="col-sm-4 col-form-label">Thời Gian Bảo Hành</label>
                <div class="col-sm-8">
                    <input asp-for="Thoigianbaohanh" class="form-control" />
                    <span asp-validation-for="Thoigianbaohanh" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3 description">
                <label asp-for="Ghichu" class="col-sm-4 col-form-label">Ghi Chú</label>
                <div class="col-sm-8">
                    <textarea asp-for="Ghichu" class="form-control"></textarea>
                    <span asp-validation-for="Ghichu" class="text-danger"></span>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
    <script>
        function previewImage(event) {
            const file = event.target.files[0];
            const reader = new FileReader();
            reader.onload = function (e) {
                const avatarPreview = document.getElementById('productPreview');
                avatarPreview.src = e.target.result;
            }
            reader.readAsDataURL(file);
        }
    </script>
}
