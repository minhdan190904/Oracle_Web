@model IEnumerable<Oracle_WEB_BTL.Models.Hoadonnhap>

@{
    ViewData["Title"] = "Danh sách hóa đơn nhập";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

<div class="ms-2 mx-2">
    <a asp-controller="Hoadonnhaps" asp-action="Create" class="btn btn-primary">
        <i class="fa fa-plus"></i> Tạo Hóa Đơn Nhập Mới
    </a>

    @if (!Model.Any())
    {
        <div class="alert alert-warning mt-3">
            Không có hóa đơn nhập nào trong danh sách.
        </div>
    }
    else
    {
        <div class="card mt-3">
            <div class="card-header">
                <h3 class="card-title">Danh sách hóa đơn nhập</h3>
            </div>
            <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Số Hóa Đơn</th>
                            <th>Nhà Cung Cấp</th>
                            <th>Nhân Viên</th>
                            <th>Ngày Nhập</th>
                            <th>Tổng Tiền</th>
                            <th>Chi Tiết</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Sohdn</td>
                                <td>@item.ManccNavigation.Tenncc</td>
                                <td>@item.ManvNavigation.Tennv</td>
                                <td>@item.Ngaynhap?.ToString("dd/MM/yyyy")</td>
                                <td>@item.TongTien?.ToString("N0") VND</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Sohdn" class="btn btn-info btn-sm">
                                        <i class="fa fa-info-circle"></i> Xem
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
